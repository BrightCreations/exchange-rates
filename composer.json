{
    "type": "library",
    "name": "brightcreations/exchange-rates",
    "description": "A Laravel package for fetching exchange rates from various sources.",
    "version": "v0.1.3",
    "license": "MIT",
    "authors": [
        {
            "name": "Bright Creations",
            "email": "kareem.shaaban@brightcreations.com"
        }
    ],
    "keywords": [
        "laravel",
        "exchange rates",
        "currency conversion"
    ],
    "autoload": {
        "psr-4": {
            "BrightCreations\\ExchangeRates\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrightCreations\\ExchangeRates\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BrightCreations\\ExchangeRates\\ExchangeRatesServiceProvider"
            ]
        }
    },
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0 || ^11.0 || ^12.0",
        "illuminate/http": "^10.0 || ^11.0 || ^12.0",
        "illuminate/console": "^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-laravel": "^2.4",
        "orchestra/testbench": "^9.14",
        "vlucas/phpdotenv": "^5.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest"
    }
}
